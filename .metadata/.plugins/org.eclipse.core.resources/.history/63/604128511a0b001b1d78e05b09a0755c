	.syntax unified
	.cpu cortex-m4
	.thumb

.data
	result: .zero 8

.text
	.global main
	.equ X, 0x12345678
	.equ Y, 0xABCDEF00

main:
	ldr R0, =X
	ldr R1, =Y
	ldr R2, =result
	bl kara_mul

L: b L

kara_mul: # store result in R8(high), R9(low)
	mov R8, #0
	mov R9, #0

	mov R4, R0 # X left
	mov R5, R0 # X right
	lsr R4, #16
	lsl R5, #16
	lsr R5, #16

	mov R6, R1 # Y left
	mov R7, R1 # Y right
	lsr R6, #16
	lsl R7, #16
	lsl R7, #16

	mul R8, R4, R6 # XL * YL * 2^32

	mul R10, R4, R7 # XL * YR

	mov R3, R10
	lsl R3, #16

	adds R9, R9, R3

	mov R3, R10
	lsr R3, #16

	adc R8, R8, R3

	mul R10, R5, R6 # XR * YL

	mov R3, R10
	lsl R3, #16

	adds R9, R9, R3

	mov R3, R10
	lsr R3, #16

	adc R8, R8, R3

	mul R3, R5, R7 # XR * YR
	adds R9, R9, R3
	add R8, R8, C

	bx lr
